<h1> New Recipe! </h1>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
  <% end %>

<br>
<%= collection_check_boxes(:recipe, :ingredient_ids, Ingredient.all, :id, :name) do |b| %>
  <div>
    <%= b.check_box %>
    <%= b.label %>
  </div>
<% end %>
<br>

<%= link_to 'Delete', @recipe, method: :delete %></div>
<%= link_to 'Back', recipes_path %>
