<h1> Edit <%= @recipe.name.capitalize %> </h1>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <br>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 15, cols: 40 %>
  <br>

  <%= f.submit %>
<% end %>

<hr>

<%= link_to 'Delete', @recipe, method: :delete %>
<%= link_to 'Back', recipes_path %>
