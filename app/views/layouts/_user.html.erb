<div class="user-panel">
  <% if current_user %>
    <%= link_to 'Log Out', destroy_user_session_path, method: :delete %> 
    <% if current_user.admin? %>
      &nbsp; - &nbsp; <%= link_to 'Admin', admin_path %>
    <% end %>
  <% else %>
    <%= link_to 'Log In', new_user_session_path %>
  <% end %>
</div>
